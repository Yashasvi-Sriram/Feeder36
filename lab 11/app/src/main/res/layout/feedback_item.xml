<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/feedback_item_layout">

    <TextView
        android:id="@+id/feedback_name"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="TextView"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textColor="?android:attr/textColorLinkInverse"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/feedback_course_code"
        android:layout_toEndOf="@+id/feedback_course_code" />

    <TextView
        android:id="@+id/feedback_course_code"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic"
        android:layout_alignBottom="@+id/feedback_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>