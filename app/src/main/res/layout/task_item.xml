<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/task_item_layout">

    <TextView
        android:id="@+id/task_course_code"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_alignBaseline="@+id/task_tag"
        android:layout_alignBottom="@+id/task_tag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/task_tag"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="TextView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/task_course_code"
        android:layout_toEndOf="@+id/task_course_code"
        android:textStyle="normal|bold|italic"
        android:fontFamily="casual"
        android:textColor="@android:color/holo_red_dark" />
</RelativeLayout>